<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Đặt lại mật khẩu</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex items-center justify-center bg-gray-100 font-[Inter]"
  >
    <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8 space-y-6">
      <div class="text-center space-y-2">
        <h1 class="text-2xl font-bold text-gray-900">Đặt lại mật khẩu</h1>
        <p class="text-gray-600">
          Nhập mật khẩu mới của bạn để hoàn tất quá trình đặt lại.
        </p>
      </div>

      <div
        id="tokenAlert"
        class="hidden rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600"
      >
        Liên kết đặt lại không hợp lệ hoặc đã hết hạn.
      </div>

      <form id="resetForm" class="space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-700"
            >Mật khẩu mới</label
          >
          <input
            id="newPassword"
            type="password"
            class="mt-1 w-full rounded-lg border border-gray-200 px-4 py-3 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-100"
            placeholder="Nhập mật khẩu mới"
            required
          />
        </div>
        <div>
          <label class="text-sm font-medium text-gray-700"
            >Nhập lại mật khẩu</label
          >
          <input
            id="confirmPassword"
            type="password"
            class="mt-1 w-full rounded-lg border border-gray-200 px-4 py-3 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-100"
            placeholder="Nhập lại mật khẩu"
            required
          />
        </div>
        <p id="formMessage" class="text-sm"></p>
        <button
          type="submit"
          id="resetButton"
          class="w-full rounded-lg bg-blue-600 py-3 text-white font-semibold hover:bg-blue-700 disabled:opacity-50"
        >
          Cập nhật mật khẩu
        </button>
      </form>
    </div>

    <script>
      const params = new URLSearchParams(window.location.search);
      const token = params.get("token");
      const tokenAlert = document.getElementById("tokenAlert");
      const resetForm = document.getElementById("resetForm");
      const resetButton = document.getElementById("resetButton");
      const formMessage = document.getElementById("formMessage");

      if (!token) {
        tokenAlert.classList.remove("hidden");
        resetForm.classList.add("pointer-events-none", "opacity-50");
      }

      resetForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        formMessage.textContent = "";

        if (!token) {
          formMessage.textContent = "Token không hợp lệ.";
          formMessage.className = "text-sm text-red-600";
          return;
        }

        const newPassword = document
          .getElementById("newPassword")
          .value.trim();
        const confirmPassword = document
          .getElementById("confirmPassword")
          .value.trim();

        if (newPassword.length < 6) {
          formMessage.textContent = "Mật khẩu phải có ít nhất 6 ký tự.";
          formMessage.className = "text-sm text-red-600";
          return;
        }

        if (newPassword !== confirmPassword) {
          formMessage.textContent = "Mật khẩu nhập lại không khớp.";
          formMessage.className = "text-sm text-red-600";
          return;
        }

        resetButton.disabled = true;
        resetButton.textContent = "Đang xử lý...";

        try {
          const res = await fetch("/api/account/reset-password", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ token, newPass: newPassword }),
          });

          const data = await res.json().catch(() => ({}));

          if (res.ok) {
            formMessage.textContent =
              "Đổi mật khẩu thành công. Bạn có thể đăng nhập lại.";
            formMessage.className = "text-sm text-green-600";
            resetForm.reset();
          } else {
            formMessage.textContent =
              data?.error || "Không thể đặt lại mật khẩu.";
            formMessage.className = "text-sm text-red-600";
          }
        } catch (err) {
          formMessage.textContent = "Lỗi server. Vui lòng thử lại.";
          formMessage.className = "text-sm text-red-600";
        } finally {
          resetButton.disabled = false;
          resetButton.textContent = "Cập nhật mật khẩu";
        }
      });
    </script>
  </body>
</html>


